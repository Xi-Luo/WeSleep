<!--pages/list/pickGetupTime/pickGetupTime.wxml-->
<view class="page">
  <view class='top'>
    <text>WeSleep</text>
  </view>
  <view class='questionTitle'>
    你平时几点起床呢？
  </view>
  <view class='large'>
    {{time}}
  </view>
  <picker class="weui-btn" mode="time" value="{{time}}" start="00:00" end="23:59" bindchange="bindTimeChange">
    <view class='chose' >点击选择</view>
  </picker>
  <view class='questionTitle'>
    你平时几点睡觉呢？
  </view>
  <view class='large'>
    {{sleepTime}}
  </view>
  <picker class="weui-btn" mode="time" value="{{time}}" start="00:00" end="23:59" bindchange="bindSleepTimeChange">
    <view class='chose' >点击选择</view>
  </picker>


  <view class="small">(在您忘记打卡时作为默认打卡时间)</view>
  <button wx:if="{{time!=''&&sleepTime!=''}}" class='next' bindtap="nextStep">下一步</button>
</view>