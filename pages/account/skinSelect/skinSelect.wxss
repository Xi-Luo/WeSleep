/* pages/skinSelect/skinSelect.wxss */
.weui-grid_skinSelect {
  position: relative;
  float: left;
  padding: 20rpx 10rpx;
  width: 33.33333333%;
  box-sizing: border-box;
  border-right: 1rpx solid #d9d9d9;
  border-bottom: 1rpx solid #d9d9d9;
}

.weui-check_skinSelect {
  position: absolute;
  left: -9999rpx;
}

.weui-icon-checkbox_circle_skinSelect, .weui-icon-checkbox_success_skinSelect
{
  margin-left: 80%;
  /* margin-right: 20px; */
  margin-bottom: 3rpx;
}

.weui-grid-skinSelect {
  position: relative;
  float: left;
  padding: 0px 0px;
  width: 33.33333333%;
  box-sizing: border-box;
  border-right: 1rpx solid #d9d9d9;
  border-bottom: 1rpx solid #d9d9d9;
}

.weui-grid_active_skinSelect {
  background-color: #ececec;
}

.weui-cell__ft_skinSelect {
  text-align: right;
  color: #999;
}

.weui-cell__ft_in-radio_skinSelect {
  padding-left: 0.35em;
}

.weui-grid__label_skinSelect {
  margin-top: 1rpx;
  display: block;
  text-align: center;
  color: #000;
  font-size: 14px;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}

.weui-check__hd_in-checkbox_skinSelect {
  padding-right: 0.35em;
}

.weui-grid__icon-skinSelect {
  position: relative;
  display: block;
  width: 150rpx;
  height: 250rpx;
  margin: 0 auto;
}

.page__title_skinSelect {
    text-align: left;
    font-size: 40rpx;
    font-weight: 400;
}

.page__hd_skinSelect {
    padding: 20rpx;
}